<h1><%= @post.date.strftime '%a, %b %e' %></h1>

<%= image_tag @post.image, :class => 'feature', :alt => @post.id %>

<ul>
  <li>Caption: <%= @post.message %></li>
</ul>

<div class="controls">
  <%= link_to 'Edit Post', edit_post_path(@post) %>
  <%= link_to "Delete Post", @post, :method => 'delete', :data => { :confirm => 'Are you sure?' } %>
</div>
