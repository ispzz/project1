<!DOCTYPE html>
<html>
  <head>
    <title>Project1</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= cloudinary_js_config %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  <div class="container">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
      <div class="container">
        <div class="collapse navbar-collapse" id="navbarResponsive">
          <ul class="navbar-nav ml-auto">
            <li class="nav-item"><%= link_to "home", root_path, :class => 'nav-link' %></li>
            <% if @current_user.present? %>
                <li class="nav-item"><%= link_to "all posts", posts_path, :class => 'nav-link' %></li>
                <li class="nav-item"><%= link_to "new post", new_post_path, :class => 'nav-link' %></li>
                <li class="nav-item active"><%= link_to "My profile", user_path(@current_user), :class => 'nav-link' %></li>
                <li class="nav-item"><%= link_to "sign out", login_path, :method => 'delete', :class => 'nav-link' %></li>
              <% else %>
                <li class="nav-item"><%= link_to "sign up", new_user_path, :class => 'nav-link' %></li>
                <li class="nav-item"><%= link_to "sign in", login_path, :class => 'nav-link' %></li>
              <% end %>
          </ul>
        </div>
      </div>
    </nav>

    <%= yield %>
  </div>



  </body>
</html>
